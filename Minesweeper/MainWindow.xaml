<Window x:Class="Minesweeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Minesweeper" Height="450" Width="800">
    <Grid Background="LightGray" Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10">
            <TextBlock Text="Time: " FontSize="16" VerticalAlignment="Center"/>
            <TextBlock Name="TimerTextBlock" Text="0" FontSize="16" VerticalAlignment="Center"/>
        </StackPanel>
        <Grid Name="GameGrid" Grid.Row="1">
        </Grid>
    </Grid>
</Window>


